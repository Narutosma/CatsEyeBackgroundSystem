{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "./dist",
    "target": "ES2016",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  },
  "include": ["./src"]
}
